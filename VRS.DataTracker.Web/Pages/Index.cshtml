@page
@model IndexModel
@{
    ViewData["Title"] = "Vessels";
}

<h1>Vessels Tracking Info</h1>

<div class="text-center">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vessels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vessels[0].IMO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vessels[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vessels[0].Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vessels[0].Latitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vessels)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VesselTrackDataRecordId">Edit</a> |
            </td>
        </tr>
}
    </tbody>
</table>
</div>